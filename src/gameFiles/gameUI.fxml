<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: FFFFFF;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameFiles.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane fx:id="menuBar" GridPane.columnSpan="2" />
        <Pane fx:id="insertDiscPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
        <VBox style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Pane>
                    <children>
                        <TextField fx:id="playerOne" alignment="CENTER" layoutX="16.0" layoutY="14.0" prefHeight="40.0" prefWidth="343.0" promptText="Player 1" />
                        <TextField fx:id="playerTwo" alignment="CENTER" layoutX="16.0" layoutY="73.0" prefHeight="40.0" prefWidth="343.0" promptText="Player 2" />
                        <Button fx:id="setButton" alignment="CENTER" contentDisplay="CENTER" layoutX="117.0" layoutY="133.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="167.0" text="Set Names" />
                  <Region prefHeight="240.0" prefWidth="200.0" />
                    </children>
                </Pane>
                <Label fx:id="playerName" alignment="CENTER" prefHeight="18.0" prefWidth="372.0" text="Player 1" textFill="#fdff81">
                    <font>
                        <Font name="System Bold" size="31.0" />
                    </font>
                </Label>
                <Label fx:id="turnLabel" alignment="CENTER" prefHeight="31.0" prefWidth="374.0" text="Turn" textFill="#e5e5e5">
                    <font>
                        <Font size="21.0" />
                    </font>
                </Label>
                <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</GridPane>
